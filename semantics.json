[
  {
    "name": "musicnotationControllerGroup",
    "type": "group",
    "description": "This group exists to bind and execute control logic for the task creation of the MusicNotation package. This group will be visually hidden.",
    "fields": [
      {
        "name": "musicnotationControllerWidget",
        "type": "text",
        "widget": "musicnotationController",
        "optional": true,
        "description": "This field holds the widget for the controller logic."
      },
      {
        "name": "dataStorageGroup",
        "type": "group",
        "description": "In this group dummy-fields are created to transfer aditional data from content creation to content view.",
        "fields": [
          {
            "name": "studentSVG",
            "type": "text",
            "optional": true
          },
          {
            "name": "studentMEI",
            "type": "text",
            "optional": true
          },
          {
            "name": "solutionSVG",
            "type": "text",
            "optional": true
          },
          {
            "name": "solutionMEI",
            "type": "text",
            "optional": true
          }
        ]
      }
    ]
  },
  {
    "name": "paragraphs",
    "type": "list",
    "label": "Paragraphs",
    "optional": true,
    "entity": "paragraph",
    "description": "Each paragraph may contain a text, multiple notations and multiple media",
    "min": 0,
    "field": {
      "name": "paragraph",
      "type": "group",
      "isSubContent": true,
      "label": "Papragraph Content",
      "importance": "high",
      "expanded": true,
      "fields": [
        {
          "name": "paragraphText",
          "label": "Paragraph text",
          "type": "text",
          "tags": [
            "p",
            "br",
            "strong",
            "em"
          ],
          "optional": true,
          "widget": "html"
        },
        {
          "name": "buttonVisibility",
          "type": "group",
          "label": "Button visibility (Student view)",
          "fields": [
            {
              "name": "toggleSidebar",
              "type": "boolean",
              "label": "Side bar menu",
              "default": true
            },
            {
              "name": "tabButtonGroup",
              "type": "group",
              "label": "Mode buttons",
              "fields": [
                {
                  "name": "notationTabBtn",
                  "type": "boolean",
                  "label": "Notation",
                  "default": true
                },
                {
                  "name": "annotationTabBtn",
                  "type": "boolean",
                  "label": "Annotation",
                  "default": true
                }
              ]
            },
            {
              "name": "playBtnGroup",
              "type": "boolean",
              "label": "Play & rewind buttons",
              "default": true
            },
            {
              "name": "colorPickerBtn",
              "type": "boolean",
              "label": "Color button",
              "default": true
            },
            {
              "name": "importButtonGroup",
              "type": "group",
              "label": "Import buttons",
              "fields": [
                {
                  "name": "importAudioFileBtn",
                  "type": "boolean",
                  "label": "Import Audio File",
                  "default": true
                },
                {
                  "name": "importXMLBtn",
                  "type": "boolean",
                  "label": "Import XML",
                  "default": true
                },
                {
                  "name": "exportFileBtn",
                  "type": "boolean",
                  "label": "Export MEI",
                  "default": true
                }
              ]
            },
            {
              "name": "noteGroup",
              "type": "group",
              "label": "Note buttons",
              "fields": [
                {
                  "name": "breveNote",
                  "type": "boolean",
                  "label": "Breve note"
                },
                {
                  "name": "fullNote",
                  "type": "boolean",
                  "label": "Full note"
                },
                {
                  "name": "halfNote",
                  "type": "boolean",
                  "label": "Half note"
                },
                {
                  "name": "quarterNote",
                  "type": "boolean",
                  "label": "Quarter note"
                },
                {
                  "name": "eigthNote",
