                }
              ]
            },
            {
              "name": "modGroup",
              "type": "group",
              "label": "Mod buttons",
              "fields": [
                {
                  "name": "tupletBtn",
                  "type": "boolean",
                  "label": "Tuple",
                  "default": true
                },
                {
                  "name": "tieNotes",
                  "type": "boolean",
                  "label": "Tie",
                  "default": true
                },
                {
                  "name": "organizeBeams",
                  "type": "boolean",
                  "label": "Organize",
                  "default": true
                }
              ]
